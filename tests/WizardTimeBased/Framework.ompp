use "time_based/time_based_modgen.ompp";

void StartSimulation(int id)
{
    BaseEvent::global_time = 0;
    for (int nJ = 0; nJ < StartingPopulationSize; nJ++)
    {
        Person *paPerson = new Person();
        paPerson->Start();
    }
}

void EndSimulation()
{
}
