/* NOTE(StartSimulation, EN)
	This module implements the framework functions StartSimulation and EndSimulation.
*/

#include "omc/omSimulation.h"

void StartSimulation(int id)
{
    BaseAgent::global_time = 0;
    for (int nJ = 0; nJ < StartingPopulationSize; nJ++)
    {
        Person *paPerson = new Person();
        paPerson->Start();
    }
}

void EndSimulation()
{
}

